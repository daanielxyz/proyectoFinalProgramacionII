<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER">
    <Label text="Cambio de Contraseña"/>
    <TextField fx:id="emailField" promptText="Correo Electrónico"/>
    <TextField fx:id="codigoField" promptText="Código de Verificación"/>
    <PasswordField fx:id="nuevaContrasenaField" promptText="Nueva Contraseña"/>
    <Button text="Solicitar Código" onAction="#solicitarCodigo"/>
    <Button text="Cambiar Contraseña" onAction="#cambiarContrasena"/>
</VBox>