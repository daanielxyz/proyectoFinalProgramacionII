<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER">
    <Label text="Estadísticas de Alojamientos"/>
    <TextField fx:id="ciudadField" promptText="Ciudad"/>
    <Button text="Mostrar Estadísticas" onAction="#mostrarEstadisticas"/>
    <BarChart fx:id="ocupacionChart">
        <xAxis>
            <CategoryAxis label="Alojamiento"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Ocupación (%)"/>
        </yAxis>
    </BarChart>
    <BarChart fx:id="rentabilidadChart">
        <xAxis>
            <CategoryAxis label="Tipo de Alojamiento"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Ganancias"/>
        </yAxis>
    </BarChart>
</VBox>